// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  TRADER
}

enum TradeType {
  BUY
  SELL
}

enum TradeStatus {
  OPEN
  CLOSED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(TRADER)
  apiKey    String   @unique @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  trades         Trade[]
  journalMetrics JournalMetric[]

  @@map("users")
}

model Trade {
  id            String      @id @default(uuid())
  userId        String
  symbol        String      // e.g., EURUSD
  type          TradeType
  entryPrice    Float
  exitPrice     Float?
  sl            Float?      // Stop Loss
  tp            Float?      // Take Profit
  lotSize       Float
  profit        Float?
  status        TradeStatus @default(OPEN)
  setup         String?     // e.g., "Aurum V33"
  screenshotUrl String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("trades")
}

model JournalMetric {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime @db.Date
  balance   Float
  equity    Float
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("journal_metrics")
}